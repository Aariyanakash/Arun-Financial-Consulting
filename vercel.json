{
  "version": 2,
  "buildCommand": "cd client && npm install --legacy-peer-deps && npm run build",
  "installCommand": "npm install --prefix server --legacy-peer-deps",
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": true,
        "includeFiles": "../client/dist/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/client/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server/server.js"
    }
  ]
}
