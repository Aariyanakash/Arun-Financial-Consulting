{
  "version": 2,
  "buildCommand": "cd client && npm run build && cd .. && ls -la",
  "installCommand": "npm install && cd client && npm install",
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/server.js"
    }
  ]
}
